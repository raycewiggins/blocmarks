<div class="container">
  <h1><%= @topic.title %></h1>


  <% @topic.bookmarks.each do |bookmark| %>
      <div class="media">
        <div class="media-body">
          <div class="media-heading col-md-8">
            <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
            <div class="pull-right"><%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark), class: 'btn btn-success' %></div>
            <div class="pull-right"><%= render partial: 'likes/like', locals: {bookmark: bookmark } %></div>
          </div>
        </div>
      </div>
  <% end %>


  <div class="media">
  <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
  </div>
</div>
