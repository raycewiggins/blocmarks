<div class="container">
  <h1>Edit the topic title.</h1>
  <div class="form-group col-md-5">
  <%= form_for @topic do |f| %>
    <%= f.label :title %>:
    <%= f.text_field :title, class: 'form-control', placeholder: "#{@topic.title}" %>
    <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
