<div class="container">
  <div class="row">
    <h1>All topics</h1>
    <p>Save and share all your favorite bookmarks.</p>
    <div class="pull-left"><%= link_to "Create a New Topic!", new_topic_path, class: 'btn btn-primary' %></div>
</div>

    <% @topics.each do |topic| %>
      <div class="col-md-4">
        <h3><%= link_to topic.title, topic %></h3>
        <%= link_to "Edit", edit_topic_path(topic), class: 'btn btn-success' %>
        <%= link_to "Delete",  topic_path(topic), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
      </div>
    <% end %>
</div>
