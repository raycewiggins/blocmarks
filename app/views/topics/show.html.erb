<h1><%= @topic.title %></h1>

<% @topic.bookmarks.each do |bookmark| %>
<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
      <%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark), class: 'btn btn-success' %>
    </div>
  </div>
</div>
<% end %>

<div class="media">
<%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
</div>
